# Alpha-Gen Configuration Template
# Copy this file to .env and fill in your actual values

# Market Data Source
MARKET_DATA_SOURCE=schwab

# Polygon.io Configuration (if using Polygon)
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_EQUITY_TICKER=QQQ
POLYGON_OPTIONS_UNDERLYING=QQQ

# Schwab API Configuration (Required for real data)
SCHWAB_API_KEY=your_schwab_api_key_here
SCHWAB_API_SECRET=your_schwab_api_secret_here
SCHWAB_ACCOUNT_ID=your_schwab_account_id_here
SCHWAB_PAPER_TRADING=true
SCHWAB_CALLBACK_URL=http://localhost:8080/callback

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/alpha_gen.db

# Risk Management
RISK_STOP_LOSS_MULTIPLE=2.0
RISK_TAKE_PROFIT_MULTIPLE=0.5
RISK_MAX_POSITION_SIZE=25
RISK_DAILY_LOSS_LIMIT=1000.0

# Features
FEATURE_ENABLE_CHART=true
FEATURE_ENABLE_LIVE_TRADING=false
FEATURE_ENABLE_POSITION_POLLING=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
