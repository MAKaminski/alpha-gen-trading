{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/run_app.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "python": "/opt/homebrew/bin/python3.11",
            "env": {
                "ALPHAGEN_USE_MOCK_DATA": "true"
            }
        },
        {
            "name": "Run Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_pytest.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "python": "/opt/homebrew/bin/python3.11",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src",
                "PYTHONDONTWRITEBYTECODE": "1"
            },
            "debugOptions": ["IgnoreCancelledError"]
        },
        {
            "name": "Refresh OAuth",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/refresh_oauth.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "python": "/opt/homebrew/bin/python3.11",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}"
            }
        }
    ]
}
