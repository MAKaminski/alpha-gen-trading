{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üêõ Run Alpha-Gen (Unified GUI)",
            "type": "python",
            "request": "launch",
            "module": "src.alphagen",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "args": ["debug"]
        },
        {
            "name": "üß™ Run Test Suite [All Tests - Unit, Integration E2E]",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "args": [
                "tests/",
                "-v",
                "--tb=short",
                "--cov=src/alphagen",
                "--cov-report=term-missing",
                "--cov-report=html:htmlcov",
                "--cov-fail-under=80"
            ]
        },
        {
            "name": "üöÄ Run Backend API",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            }
        },
        {
            "name": "üîß Run Frontend Dev Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"]
        }
    ]
}